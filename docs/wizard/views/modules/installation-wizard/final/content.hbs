{{#if roles}}
<div id="purecloud-roles" class="margin-bottom: 20px;">
    <div style="margin-top: 20px; ">
        <div class="content is-marginless">
            <h2>Roles</h2>
        </div>
    </div>

    {{#each roles}}
    <div class="box is-radiusless is-marginless">
        <nav class="level">
            <div class="level-left is-size-5">
                <strong>
                    {{name}}
                </strong>
            </div>
            <div class="level-right">
            </div>
        </nav>
        <div>
            <em>Permissions: </em> {{#each permissions}} "{{this}}". {{/each}}
        </div> 
        <div>
            <em>Description: </em> {{description}}
        </div> 
    </div>
    {{/each}}
</div>
{{/if}}


{{#if groups}}
<div id="purecloud-groups" class="margin-bottom: 20px;">
    <div style="margin-top: 20px;">
        <div class="content is-marginless">
            <h2>Groups</h2>
        </div>
    </div>

    {{#each groups}}
     <div class="box is-radiusless is-marginless">
        <nav class="level">
            <div class="level-left is-size-5">
                <strong>
                    {{name}}
                </strong>
            </div>
            <div class="level-right">
            </div>
        </nav>
        <div>
            <em>Description: </em> {{description}}
        </div> 
    </div>
    {{/each}}
</div>
{{/if}}

{{#if appInstances}}
<div id="purecloud-instances" class="margin-bottom: 20px;">
    <div style="margin-top: 20px;"></div>
        <div class="content is-marginless">
            <h2>App Instances</h2>
        </div>
    </div>
    

    {{#each appInstances}}
    <div class="box is-radiusless is-marginless">
        <nav class="level">
            <div class="level-left is-size-5">
                <strong>
                    {{name}}
                </strong>
            </div>
            <div class="level-right">
            </div>
        </nav>
        <div class="media-content">
            <p>  
                <em>Type: </em> {{type}}
            </p>
            <p>  
                <em>URL: </em> {{url}}
            </p>
            <p>  
                <em>Groups: </em>
                {{#each groups}}
                    {{this}}
                {{/each}}
            </p>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}
