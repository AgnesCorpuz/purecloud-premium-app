{{#if fileName}}
    <article style="margin-top: 20px;" class="message is-primary">
        <div class="message-header">
            <p>{{static.orderFound}}</p>
        </div>
        <div class="message-body">
            <p>
                {{static.p1}} 
                <strong>{{fileName}}</strong> {{static.p2}}
            </p>
            <p>
                {{static.p3}}
            </p>
        </div>
    </article>
{{/if}}

<div id="purecloud-roles">
    {{#each roles}}
    <div class="box is-radiusless is-marginless">
        <nav class="level">
            <div class="level-left is-size-5">
                <strong>
                    {{name}}
                </strong>
            </div>
            <div class="level-right">
                <button id="btn-delete-{{@index}}" class="delete"></button>
            </div>
        </nav>
        <div>
            <em>{{static.permissions}}</em> {{#each permissions}} "{{this}}". {{/each}}
        </div> 
        <div>
            <em>{{static.description}} </em> {{description}}
        </div> 
    </div>
    {{/each}}
</div>

