{{#if fileName}}
    <article style="margin-top: 20px;" class="message is-primary">
        <div class="message-header">
            <p>Default Installation Order Found</p>
        </div>
        <div class="message-body">
            You're seeing this message because we have detected a default installation order from 
            <strong>{{fileName}}</strong>.
            We have prepopulated the page with the details but feel free to modify as you wish.
        </div>
    </article>
{{/if}}

<div id="purecloud-groups">
    {{#each groups}}
     <div class="box is-radiusless is-marginless">
        <nav class="level">
            <div class="level-left is-size-5">
                <strong>
                    {{name}}
                </strong>
            </div>
            <div class="level-right">
                <button id="btn-delete-{{@index}}" class="delete"></button>
            </div>
        </nav>
        <div>
            <em>Description: </em> {{description}}
        </div> 
    </div>
    {{/each}}
</div>

