<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Create groups
      </h1>
      <h2 class="subtitle">
        Groups are required to filter which members will have access to specific instances of the App.
      </h2>
    </div>
  </div>
</section>

<!--①②③④⑤⑥⑦⑧⑨⑩ -->
<div class="columns">
    <div class="column is-one-quarter">
            <p class="is-size-5 has-background-grey-lighter">① Groups</p>
            <p class="is-size-5">② App Instances</p>
            <p class="is-size-5">③ Finalize</p>
    </div>
    <div class="column">
        {{#if order}}
            <article style="margin-top: 20px;" class="message is-primary">
                <div class="message-header">
                    <p>Default Installation Order Found</p>
                </div>
                <div class="message-body">
                    You're seeing this message because we have detected a default installation order from 
                    <strong>{{orderFilename}}.json</strong>.
                    We have prepopulated the page with the details but feel free to modify as you wish.
                </div>
            </article>
        {{/if}}

        <div id="purecloud-groups">
            <div class="box">
                <nav class="level">
                    <div class="level-left">
                        Group Name
                    </div>
                    <div class="level-right">
                        <a class="delete"></a>
                    </div>
                </nav>
            </div>
        </div>
        
        <div style="margin-top: 20px" class="columns">
            <div class="column">
                <div class="field">
                    <div class="control">
                        <input type="text" class="input" placeholder="Group Name">
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="field">
                    <div class="control">
                        <button class="button is-primary"> Add Group</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>